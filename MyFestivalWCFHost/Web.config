<?xml version="1.0"?>
<configuration>
  <system.web>
    <compilation debug="true" targetFramework="4.0" />
  </system.web>
  <system.serviceModel>
    <behaviors>
      <serviceBehaviors>
        <behavior name="MyFestivalServiceBehaviour">
          <serviceMetadata httpGetEnabled="true" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <services>
      <service name="MyFestivalWCFHost.MyFestivalService" behaviorConfiguration="MyFestivalServiceBehaviour">
        <endpoint address="" binding="basicHttpBinding" contract="MyFestivalWCFHost.IMyFestivalData"/>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMyFestivalData"/>
      </service>
    </services>
    <serviceHostingEnvironment multipleSiteBindingsEnabled="true" />
  </system.serviceModel>
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true"/>
  </system.webServer>
</configuration>